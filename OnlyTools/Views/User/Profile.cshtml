    @if (Model.ProfilePicture != null)
    {
        <div>
            <img src="@Model.ProfilePicture" alt="Profile Picture" />
        </div>
    }

    <div>
        <p></p>
        <p>Text 2: [Replace this with actual text value]</p>
        <p>Text 3: [Replace this with actual text value]</p>
    </div>

    <div>
        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="EditProfile">Edit Profile</a>
    </div>
</div>
