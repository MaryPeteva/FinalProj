@model ToolDetailsModel

@{
    ViewBag.Title = "Delete tool";
}

<h2>@Model.Name</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Rented:</dt>
            <dd class="col-sm-9">@Model.IsRented</dd>

            <dt class="col-sm-3">Rent Price:</dt>
            <dd class="col-sm-9">@Model.RentPrice</dd>
        </dl>
    </div>
    <div class="col-md-6">
        @if (Model.ToolPicture != null)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ToolPicture)" class="img-fluid" alt="Tool Image" />
        }
        else
        {
            <p>No image available</p>
        }
    </div>
    <div class="card-footer">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="All" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>