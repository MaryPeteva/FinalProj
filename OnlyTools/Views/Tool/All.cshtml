@model List<ToolModel>
@{
    ViewBag.Title = "What do you need for your next project?";
}

<style>
    .card-img-top {
        width: 200px;
        height: auto;
    }
</style>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @if (!Model.Any())
    {
        <h2>No tools shared yet!</h2>
        <h4>Be the first to share!</h4>
    }
    else
    {
        @foreach (var tool in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                @if (tool.ToolPicture != null)
                {
                    string imageBase64 = Convert.ToBase64String(tool.ToolPicture);
                    string imageSrc = $"data:image/jpeg;base64,{imageBase64}";
                    <img src="@imageSrc" class="card-img-top" alt="Tool Image">
                }
                <div class="card-body">
                    <h5 class="card-title mt-1">@tool.Name</h5>
                    <p class="mb-0"><span class="fw-bold">Name: </span>@tool.Name</p>
                    <p class="mb-0"><span class="fw-bold">Rent price: </span>@tool.RentPrice</p>
                </div>

                <a asp-controller="Tool" asp-action="Details" asp-route-id="@tool.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">View Details</a>
                @if (User.Identity.IsAuthenticated && tool.OwnerID.ToString() == User.FindFirstValue(ClaimTypes.NameIdentifier))
                {
                    <a asp-controller="Tool" asp-action="Edit" asp-route-id="@tool.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
                    <form class="mt-2" asp-controller="Tool" asp-action="Delete" asp-route-id="@tool.Id">
                        <div class="d-grid gap-2">
                            <input type="submit" value="Delete" class="btn btn-danger mb-2" />
                        </div>
                    </form>
                }
            </div>
        }
    }

    <!-- Pagination controls -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (ViewBag.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(ViewBag.PageIndex - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.PageIndex ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
            @if (ViewBag.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(ViewBag.PageIndex + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
