@model OnlyTools.Infrastructure.Data.Models.Tool

@{
    ViewData["Title"] = "Rent Tool";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Rent" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="RentPrice"></label>
        <input asp-for="RentPrice" class="form-control" readonly />
    </div>
    <input type="hidden" asp-for="RenterID" />
    <button type="submit" class="btn btn-primary">Rent Tool</button>
</form>
