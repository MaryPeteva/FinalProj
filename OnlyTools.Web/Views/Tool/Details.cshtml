@model ToolDetailsModel

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Rent Price:</dt>
            <dd class="col-sm-9">@Model.RentPrice</dd>
        </dl>
        @if (!Model.IsRented && Model.OwnerID != User.FindFirstValue(ClaimTypes.NameIdentifier))
        {
            <a asp-controller="Tool" asp-action="Rent" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Rent</a>
        }
    </div>
    <div class="col-md-6">
        @if (Model.ToolPicture != null)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ToolPicture)" class="img-fluid" alt="Tool Image" />
        }
    </div>
</div>